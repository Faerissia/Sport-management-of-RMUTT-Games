<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>place</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <a href="/place" class="btn btn-info">ย้อนกลับ</a>
    <br><br>

    <div class="card">
        <div class="card-header">
            เพิ่มสถานที่
        </div>
        <div class="card-body">
            <form action="/place/add" method="post">
                <div class="form-group">
                    <label>ชื่อสถานที่:</label>
                    <input type="text" class="form-control" name="placeName" autocomplete="off">
                </div>
                <div class="form-group">
                    <label style="margin-top: 15px;">กีฬา:</label>
                    <select name="sportID">
                        <% for(let i = 0; i < data.length; i++) { %>
                        <option value="<%= data[i].sportID %>"><%= data[i].sportName %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>URL สถานที่:</label>
                    <input type="text" class="form-control" name="placeUrl" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>อัพโหลดไฟล์รูปภาพ:</label>
                    <input type="file" class="form-control" name="placeFile" autocomplete="off"> 
                </div>
                <div class="form-group">
                    <label>รายละเอียดสถานที่:</label>
                    <textarea input type="text" class="form-control" name="placeDetail" autocomplete="off">
                        </textarea>
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <input type="submit" class="btn btn-info" value="เพิ่ม">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>