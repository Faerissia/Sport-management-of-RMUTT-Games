<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>place</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <a href="/place" class="btn btn-info">ย้อนกลับ</a>
    <br><br>

    <div class="card">
        <div class="card-header">
            เพิ่มสถานที่
        </div>
        <div class="card-body">
            <form action="/place/edit" method="post">
                <div class="form-group">
                    <label>ชื่อสถานที่:</label>
                    <input type="text" class="form-control" name="placeName" value="<%= placeName %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>กีฬา:</label>
                    <input type="text" class="form-control" name="sportID" value="<%= sportID %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>URL สถานที่:</label>
                    <input type="text" class="form-control" name="placeUrl" value="<%= placeUrl %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>อัพโหลดไฟล์รูปภาพ:</label>
                    <input type="text" class="form-control" name="placeFile" value="<%= placeFile %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>รายละเอียดสถานที่:</label>
                    <input type="text" class="form-control" name="placeDetail" value="<%= placeDetail %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <a href="/place" class="btn btn-info">Back</a>
                    <input type="submit" class="btn btn-info" value="Update">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>