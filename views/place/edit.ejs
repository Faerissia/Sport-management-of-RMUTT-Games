<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>place</title>
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    
    <br><br>

    <div class="card">
        <div class="card-header display-6">
            แก้ไขสถานที่
        </div>
        <div class="card-body">
            <form action="/place/update/<%= placeID %>" method="post" encType="multipart/form-data" class="form needs-validation">
                <!--  -->
                <div class="row my-2  p row-cols-2">
                    <div class="col-2 ">
                        <label class="col-form-label">ชื่อสถานที่</label>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control border-dark" name="placeName"
                            autocomplete="off" required value="<%= placeName %>">
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2">
                    <div class="col-2 ">
                        <label style="margin-top: 15px;">กีฬา</label>
                    </div>
                    <div class="col-auto">
                        <select name="typeID" value="<%= data[0].typeID%>" class="form-select border-dark" required>
                           
                            <% for(let i = 0; i < data.length; i++) { %>
                                <option value="<%= data[i].typeID %>"><%= data[i].nameType %></option>
                                <% } %>
                        </select>
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2">
                    <div class="col-2 ">
                        <label class="col-form-label">URL สถานที่</label>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control border-dark" name="placeUrl"
                            autocomplete="off"  value="<%= placeUrl %>" required>
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2">
                    <div class="col-2 ">
                        <label class="col-form-label">อัพโหลดไฟล์รูปภาพ</label>
                    </div>
                    <div class="col-4 ">
                        <input type="file" class="form-control border-dark" value="<%= placeFile %>" name="placeFile"
                            autocomplete="off" onchange="preview()" >
                            
                            <image src="/place/<%= placeFile %>" class="form-control" id="imgpreview">
                            
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2">
                    <div class="col-2 h-auto" style="max-height: 300px; min-height: 100px;">
                        <label class="col-form-label">รายละเอียดสถานที่</label>
                    </div>
                    <div class="col-4">
                        <textarea input type="text" class="form-control border-dark" name="placeDetail"
                            autocomplete="off" value="<%= placeDetail %>" required><%= placeDetail %></textarea>
                    </div>
                </div>
               <!--  -->
               <div class="row row-cols-2 mt-5 text-center d-flex justify-content-center">
                <div class="col-2">
                    <a href="/place" class="btn btn-danger">ย้อนกลับ</a>
                </div>
                <div class="col-2">
                    <button class="btn btn-success" type="submit">Update</button>
                </div>
            </div>
            </form>
        </div>
    </div>
    <script>
        function preview() {
            imgpreview.src = URL.createObjectURL(event.target.files[0]);
            imgpreview.style.display = "block";

        }
    </script>
</body>
</html>
</div>