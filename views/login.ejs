
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Sample Site</title>
    <link rel="icon"  href="/icon-title.png" sizes="16x8">

  </head>
  <body>
    
    
    <%- include("partials/header") %>
    <div class="container  mx-auto ">
        <div class="container w-50" style="margin-top: 10%;">   


        <main class="form-signin w-100 m-auto  ">
            <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
              <h1 class="h3 mb-3 fw-normal text-center"> Sign in</h1>
            
              <div class="mt-3 form-floating">
                <input type="text" class="form-control" id="floatingInput" placeholder="Username" name="email">
                <label for="floatingInput">Username</label>
              </div>
              <div class="mt-3 form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password"  name="password">
                <label for="floatingPassword">Password</label>
              </div>
              <% if (messages.error) { %>
                <div class="alert alert-danger w-100 mx-auto" role="alert"><%= messages.error %></div>
            <% } %>
              <div class="text-center w-75 mx-auto ">
                  <button class="mt-5 w-100  btn btn-lg btn-success" type="submit">Sign in</button>
              </div>
            </form>
          </main>
          
        </div>
      </div>
</body>
</html>



