<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>บัญชีผู้ใช้งาน</title>
</head>
<body >

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>

    
    <br><br>
    
    <div class="card">
        <div class="card-header display-6">
            แก้ไขบัญชีผู้ใช้งาน
        </div>
        <div class="card-body">
            <form action="/account/update/<%= accountID %>" method="post">
                <div class="row-cols-1 ">
                    <div class="row  ">
                        <div class="col-auto">
                            <label  class="form-label" >ชื่อ</label>
                            
                            <input type="text" class="form-control border border-dark" name="name" value="<%= name %>" autocomplete="off" required>
                        </div>
                        <div class="col-auto">
                            <label  class="form-label" >นามสกุล</label>
                            <input type="text" class="form-control border border-dark" name="lname" value="<%= lname %>" autocomplete="off" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <label  class="form-label" >เบอร์โทร</label>
                            <input type="text" class="form-control border border-dark" name="phone"  value="<%= phone %>" autocomplete="off" required>
                        </div>
                        <div class="col-4">
                            <label  class="form-label" >อีเมล</label>
                            <input type="email" class="form-control border border-dark" name="email"  value="<%= email %>" autocomplete="off" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <label  class="form-label" >รหัสผ่าน</label>
                            <input type="text" class="form-control border border-dark" name="password" value="<%= password %>" autocomplete="off" required
                                minlength="8">
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-auto">
                            <label style="margin-top: 10px;">ระดับผู้ใช้งาน</label>
                            <select name="thelevel" class="form-select border border-dark" autocomplete="off" required >
                                

                                <option selected value="<%= thelevel%>"><%= thelevel%></option>
                                <option value="<%= thelevel='ผู้ดูแลระบบ' %>">ผู้ดูแลระบบ</option>
                                <option value="<%= thelevel='เจ้าหน้าที่' %>">เจ้าหน้าที่</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <label style="margin-top: 10px;">สถานะ</label>
                            <select name="status" class="form-select border border-dark" autocomplete="off" required>

                                <option value="<%= status='ใช้งาน' %>">ใช้งาน</option>
                                <option value="<%= status='ลาออก' %>">ลาออก</option>
                            </select>
                        </div>
                    </div>
                </div>


               
                <div class="row row-cols-2 mt-5 text-center d-flex justify-content-center">
                    <div class="col-2">
                        <a href="javascript:history.back()" class="btn btn-danger">ยกเลิก</a>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-success" type="submit">ยืนยัน</button>
                    </div>
                </div>


            </form>
        </div>
    </div>

</body>
</html>
</div>