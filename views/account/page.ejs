<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ข้อมูลบัญชีผู้ใช้งาน</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body >

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>

    
    <br><br>
    
    <div class="card">
        <div class="card-header">
            ข้อมูลบัญชีผู้ใช้งาน
        </div>
        <div class="card-body">
                <div class="form-group">
                    <label>ชื่อ:</label>
                    <input type="text" class="form-control" name="name" value="<%= name %>" disabled>
                </div>
                <div class="form-group">
                    <label>นามสกุล :</label>
                    <input type="text" class="form-control" name="lname" value="<%= lname %>" disabled>
                </div>
                <div class="form-group">
                    <label>เบอร์โทร :</label>
                    <input type="text" class="form-control" name="phone" value="<%= phone %>" disabled>
                </div>
                <div class="form-group">
                    <label>อีเมล :</label>
                    <input type="text" class="form-control" name="email" value="<%= email %>" disabled>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px;">ระดับผู้ใช้งาน:</label>
                    <select name="level" disabled>
                        <option value="<%= level='ผู้ดูแลระบบ' %>">ผู้ดูแลระบบ</option>
                        <option value="<%= level='เจ้าหน้าที่' %>">เจ้าหน้าที่</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px;">สถานะ:</label>
                    <select name="status" disabled>
                        <option value="<%= status='ใช้งาน' %>">ใช้งาน</option>
                        <option value="<%= status='ลาออก' %>">ลาออก</option>
                    </select>
                </div>
                <br>
                <div class="form-group">
                    <a href="/account" class="btn btn-primary">ย้อนกลับ</a>
                </div>
        </div>
    </div>

</body>
</html>
</div>