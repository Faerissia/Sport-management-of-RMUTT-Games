<%- include('../partials/sidebar.ejs') %>
<!-- nav side -->
            <!-- box content -->
            <div class="col-10 py-3">
                <!DOCTYPE html>
                <html lang="en">
                <head>
                    <meta charset="UTF-8">
                    <meta http-equiv="X-UA-Compatible" content="IE=edge">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <title>account</title>
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
                </head>
                <body>
                
                    <% if (messages.error) { %>
                        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
                    <% } %>
                    
                
                    <br><br>
                
                    <div class="card">
                        <div class="card-header">
                            เพิ่มบัญชี
                        </div>
                        <div class="card-body">
                            <form action="/account/add" method="post">
                                <div class="form-group">
                                    <label>ชื่อ:</label>
                                    <input type="text" class="form-control" name="name" value="<%= name %>" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <label>นามสกุล :</label>
                                    <input type="text" class="form-control" name="lname" value="<%= lname %>" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <label>เบอร์โทร :</label>
                                    <input type="text" class="form-control" name="phone" value="<%= phone %>" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <label>อีเมล :</label>
                                    <input type="text" class="form-control" name="email" value="<%= email %>" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <label>รหัสผ่าน :</label>
                                    <input type="password" class="form-control" name="password" value="<%= password %>" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <label style="margin-top: 10px;">ระดับผู้ใช้งาน:</label>
                                    <select name="level">
                                        <option value="<%= level='ผู้ดูแลระบบ' %>">ผู้ดูแลระบบ</option>
                                        <option value="<%= level='เจ้าหน้าที่' %>">เจ้าหน้าที่</option>
                                    </select>
                                    <div class="form-group">
                                        <label style="margin-top: 10px;">สถานะ:</label>
                                        <select name="status">
                                            <option value="<%= status='ใช้งาน' %>">ใช้งาน</option>
                                            <option value="<%= status='ลาออก' %>">ลาออก</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group" style="margin-top: 10px;">
                                    <a href="/account" class="btn btn-info">ย้อนกลับ</a>
                                    <input type="submit" class="btn btn-info" value="เพิ่ม">
                                </div>
                            </form>
                        </div>
                    </div>
                
                </body>
                </html>
            </div>

