    <form action="/uni/search-uni" method="post">
        <div class="input-group ">
            <input type="text" name="search" class="form-control border border-dark" placeholder="ค้นหา ชื่อมหาวิทยาลัย">
            <button type="submit" class="btn btn-primary">ค้นหา</button>
        </div>
    </form>
    </div> -->
    
    <div class="card w-100">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-link ml-auto">
                    
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table id="mytable" class="table  table-striped table-hover table-bordered ">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">ลำดับที่</th>
                            <th scope="col">ชื่อมหาวิทยาลัย</th>
                            <th scope="col">สถานะการเข้าร่วม</th>
                            <th scope="col">จำนวนคณะ</th>
                            <th width="200px" class="text-center">ตัวเลือก</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) { %>
                            <tr class="align-middle">
                                <th scope="row" class="text-center"><%= i+1 %></th>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].status %></td>
                                <td><%= data[i].count %></td>
                                <td class="text-center">
                                    <a href="../faculty/<%= data[i].uniID %>" class="btn btn-primary">ดู</a>
                                    <a href="../uni/edit/<%= data[i].uniID %>" class="btn btn-warning edit">แก้ไข</a>
                                    <a href="../uni/delete/<%= data[i].uniID %>" onclick="return confirm_delete()" class="btn btn-danger delete">ลบ</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <script>
                    $(document).ready(function () {
                      $('#mytable').DataTable({
                        dom: '<"row"<"col text-start"l><"col"f>> rt <"row"<"col text-start"i><"col "p>>     <"clear">',
                        language: {
                          search: 'ค้นหา:',
                          searchPlaceholder: 'ชื่อมหาวิทยาลัย',
                          lengthMenu: 'แสดง _MENU_ รายการต่อหน้า',
                          info: 'แสดงผล _START_ ถึง _END_ จากทั้งหมด _TOTAL_ รายการ',
                          paginate: {
                            first: 'หน้าแรก',
                            last: 'หน้าสุดท้าย',
                            next: 'ถัดไป',
                            previous: 'ก่อนหน้า',
                          },
                        },
                      });
                    });
                  </script>
            <% } %>

            <!-- if result is empty-->
            <% if(!data.length) { %>
                <p class="text-center">ไม่พบรายการมหาวิทยาลัย</p>
            <% } %>
        </div>
    </div>

</body>
</html>
</div>