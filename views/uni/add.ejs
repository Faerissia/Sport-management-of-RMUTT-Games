<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
<div class="col-10 py-3 mx-auto">

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">

<!-- bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- icon -->
<script src="https://code.iconify.design/iconify-icon/1.0.2/iconify-icon.min.js"></script>
<!--  -->
        <title>tournament</title>
    </head>

    <body>

        <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= messages.error %>
            </div>
            <% } %>


                <div class="card">
                    <div class="card-header">
                        <p class="display-6 mb-0">
                            เพิ่มมหาวิทยาลัย
                        </p>
                    </div>
                    <div class="card-body">

                        <!--_________________ Form _________________-->
                        <form action="/uni/add" method="post" encType="multipart/form-data"
                            class="form needs-validation n ">
                            <!--  -->
                            <div class="row my-2  p row-cols-2">
                                <div class="col-2 ">
                                    <label for="validationNametour"
                                        class="col-form-label">ชื่อมหาวิทยาลัย</label>
                                </div>
                                <div class="col-4">
                                    <input type="text" class="form-control border-dark" id="validationNametour"
                                        value="" name="name" autocomplete="off" required>
                                </div>
                            </div>
                            
                      


                            <div class="row my-2   row-cols-2">
                                <div class="col-2 ">
                                    <label for="validationFile_doc"
                                        class="col-form-label">สถานะการเข้าร่วม</label>
                                </div>
                                <div class="col-auto">
                                    <select class="form-select border-dark" id="validationFile_doc"
                                        name="status" required>
                                        <option selected disabled value="">สถานะการเข้าร่วม</option>
                                        <option value="<%= status='เข้าร่วม' %>">เข้าร่วม</option>
                                        <option value="<%= status='ไม่เข้าร่วม' %>">ไม่เข้าร่วม</option>
                                    </select>
                                </div>
                            </div>


                            <!--  -->
                            <div class="row row-cols-2 mt-5 text-center d-flex justify-content-center">
                                <div class="col-2">
                                    <a href="/uni" class="btn btn-danger">ย้อนกลับ</a>
                                </div>
                                <div class="col-2">
                                    <button class="btn btn-success" type="submit">เพิ่ม</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

    </body>

    </html>
</div>