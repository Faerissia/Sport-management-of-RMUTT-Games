<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>sport</title>
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>

    
    <br><br>
    
    <div class="card">
        <div class="card-header">
            แก้ไขกีฬา
        </div>
        <div class="card-body">
            <form action="/sport/update/<%= sportID %>" method="post">
                <div class="form-group">
                    <label>ชื่อกีฬา:</label>
                    <input type="text" class="form-control" name="sportName" value="<%= sportName %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>จำนวนผู้เล่น:</label>
                    <input type="text" class="form-control" name="sportPlaynum" value="<%= sportPlaynum %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>ประเภท:</label>
                    <input type="text" class="form-control" name="type" value="<%= type %>" autocomplete="off">
                </div>
                <br>
                <div class="form-group">
                    <a href="/sport" class="btn btn-info">ย้อนกลับ</a>
                    <input type="submit" class="btn btn-info" value="Update">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>