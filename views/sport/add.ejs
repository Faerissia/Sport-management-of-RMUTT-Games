<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sport</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <a href="/sport" class="btn btn-info">ย้อนกลับ</a>
    <br><br>

    <div class="card">
        <div class="card-header">
            เพิ่มกีฬา
        </div>
        <div class="card-body">
            <form action="/sport/add" method="post">
                <div class="form-group">
                    <label>ชื่อกีฬา:</label>
                    <input type="text" class="form-control" name="sportName" value="<%= sportName %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label style="margin-top: 15px;">ประเภท:</label>
                    <select name="type">
                        <option value="<%= type='เดี่ยว' %>">เดี่ยว</option>
                        <option value="<%= type='คู่' %>">คู่</option>
                        <option value="<%= type='ทีม' %>">ทีม</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px;">จำนวนผู้เล่น:</label>
                    <input type="text" class="form-control" name="sportPlaynum" value="<%= sportPlaynum %>" autocomplete="off">
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <input type="submit" class="btn btn-info" value="เพิ่ม">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>