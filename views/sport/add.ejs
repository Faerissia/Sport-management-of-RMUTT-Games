<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>sport</title>
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <br><br>

    <div class="card">
        <div class="card-header">
            เพิ่มกีฬา
        </div>
        <div class="card-body">
            <form action="/sport/add" method="post">
                <div class="form-group">
                    <label>ชื่อกีฬา:</label>
                    <input type="text" class="form-control" name="sportName" value="<%= sportName %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label style="margin-top: 15px;">ประเภท:</label>
                    <select name="type">
                        <option value="<%= type='เดี่ยว' %>">เดี่ยว</option>
                        <option value="<%= type='คู่' %>">คู่</option>
                        <option value="<%= type='ทีม' %>">ทีม</option>
                    </select>
                </div>
                <div class="form-group">
                    <label style="margin-top: 10px;">จำนวนผู้เล่น:</label>
                    <input type="text" class="form-control" name="sportPlaynum" value="<%= sportPlaynum %>" autocomplete="off">
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <a href="javascript:history.back()" class="btn btn-primary">ย้อนกลับ</a>
                    <input type="submit" class="btn btn-info" value="เพิ่ม">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>