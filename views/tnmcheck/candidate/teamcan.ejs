<%- include("../../partials/header") %>
<%- include("../../partials/sidebar") %>
           <div class="col py-3 mx-auto container-xxl ">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>tournament</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet"/>
      <link href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css" rel="stylesheet"/>
      <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
      <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
      <script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>
</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>

    <script type="text/javascript">
        function confirm_delete() {
          return confirm('are you sure?');
        }
        </script>
<% if(data && data[0]) { %>
        <h1>การแข่งขัน <%=data[0].tnmName %></h1>
        
        <% if(data.length) { %>
        <!-- ผู้เล่น -->
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                   
            </ul>
        </div>
        <div class="card-body">
            <h1>ยังไม่อนุมัติ</h1>
             <div class="card-body">
                <table id="mytable1" class="table  table-striped table-hover table-bordered ">
                    <thead>
                        <tr>
                            <th scope="col">ชื่อทีม</th>
                            <th scope="col">ชื่อ - นามสกุลตัวแทน</th>
                            <th scope="col">เบอร์โทรติดต่อตัวแทน</th>
                            <th scope="col">วันที่สมัคร</th>
                            <th scope="col">หมายเหตุ</th>
                            <th width="200px" class="text-center">ตัวเลือก</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) { %>
                            <% const date = new Date(data[i].teamRegDate); %>
                            <% if(data[i].teamStatus === 'wait') { %>
                            <tr  class="align-middle">
                                <td><%= data[i].teamName %></td>
                                <td><%= data[i].NameAgent %> <%= data[i].LnameAgent %></td>
                                <td><%= data[i].teamPhoneA %></td>
                                <td><%= date.toLocaleDateString('th-TH',{day: '2-digit', month: 'long', year:'numeric'}) %></td>
                                <td style="color: red;"><%= data[i].detailDoc %></td>
                                <td class="text-center">
                                <a href="../team/<%=data[i].teamID%>" class="btn btn-primary page">ดู</a>
                                </td>
                            </tr>
                            <% } }%>
                    </tbody>
                </table>
             </div>
            <% } %>


    <h1>อนุมัติแล้ว</h1>
    <div class="card-body">
            <table id="mytable2" class="table  table-striped table-hover table-bordered ">
                <thead>
                    <tr>
                        <th scope="col">ชื่อทีม</th>
                            <th scope="col">ชื่อ - นามสกุลตัวแทน</th>
                            <th scope="col">เบอร์โทรติดต่อตัวแทน</th>
                            <th scope="col">วันที่สมัคร</th>
                            <th width="200px" class="text-center">ตัวเลือก</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < data.length; i++) { %>
                        <% if(data[i].teamStatus === 'accept') { %>
                        <tr class="align-middle">
                            <td><%= data[i].teamName %></td>
                                <td><%= data[i].NameAgent %> <%= data[i].LnameAgent %></td>
                                <td><%= data[i].teamPhoneA %></td>
                                <td><%= data[i].teamRegDate.toLocaleDateString('th-TH',{day: '2-digit', month: 'long', year:'numeric'}) %></td>
                            <td class="text-center">
                                <a href="../delete/team/<%= data[i].teamID %>" onclick="return confirm_delete()" class="btn btn-danger delete">ลบ</a>
                                <a href="../edit/team/<%= data[i].teamID %>" class="btn btn-warning edit">แก้ไข</a>
                                <a href="/tournament/participant/team/<%=data[i].teamID%>" class="btn btn-primary page">ดู</a>
                            </td>
                        </tr>
                    <% }} %>
                </tbody>
            </table>
        </div>
        <% } %>
            <!-- if result is empty-->
            <% if(!data.length) { %>
                <div class="text-center">
                    <h1>ไม่พบผู้เข้าร่วม</h1>
                </div>
            <% } %>
        </div>
    </div>
    <script>
        $(document).ready(function () {
          $('.table').DataTable({
            dom: '<"row"<"col text-start"l><"col"f>> rt <"row"<"col text-start"i><"col "p>>     <"clear">',
            language: {
              search: 'ค้นหา:',
              searchPlaceholder: ' ',
              lengthMenu: 'แสดง _MENU_ รายการต่อหน้า',
              info: 'แสดงผล _START_ ถึง _END_ จากทั้งหมด _TOTAL_ รายการ',
              paginate: {
                first: 'หน้าแรก',
                last: 'หน้าสุดท้าย',
                next: 'ถัดไป',
                previous: 'ก่อนหน้า',
              },
            },
          });
        });
      </script>

</body>
</html>
</div>