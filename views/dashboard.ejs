                                                                        family: "Kodchasan-Regular",
                                                                        size: 16,
                                                                        }
                                                                        ,color: 'dark'
                                                                        },

                                                                legend: {
                                                                    labels: { 
                                                                        display:false,
                                                                    font: {
                                                                        family: "Kodchasan-Regular",
                                                                        size: 12,
                                                                        }
                                                                        ,color: 'dark'
                                                                    }
                                                                },
                                                                datalabels: {
                                                                    display: true,
                                                                    color: 'black',
                                                                    font: {
                                                                        
