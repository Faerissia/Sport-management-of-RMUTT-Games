                                                                    align: 'center',
                                                                    anchor: 'center',
                                                                    color: 'dark',
                                                                    formatter: function (value, context) {
                                                                        if (value > 0) {
                                                                                return value;
                                                                            } else {
                                                                                return '';
                                                                            }
                                                                    }
                                                                }
                                                            },
                                                            barThickness: 30,
                                                            barSpacing: 2
                                                        }, barThickness: 30,
                                                        barSpacing: 2
                                                        ,
                                                        plugins: [
                                                            ChartDataLabels
                                                        ]
                                                    });

                                               
                                                </script>


                                            </div>

