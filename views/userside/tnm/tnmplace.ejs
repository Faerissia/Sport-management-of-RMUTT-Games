<%- include("../../partials/header") %>
    <div class="container-xxl mt-5 px-3">
        <!DOCTYPE html>


        <head>
            <title>ข้อมูบการแข่งขัน</title>
           
        </head>

        <body>

            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert"><%= messages.error %></div>
            <% } %>
            
            <% if (messages.success) { %>
                <div class="alert alert-success" role="alert"><%= messages.success %></div>
            <% } %>

            <div class=" d-flex flex-column  justify-content-center align-seft-center align-item-center  text-center  mb-5 border   border-dark rounded-3 "
                style="background:#D9D9D9 ; ">


<div class="card">
        <div class="card-header display-6 text-start ">
            ข้อมูลสถานที่
        </div>
        <div class="card-body text-start">
                <!--  -->
                <div class="row my-2   row-cols-2">
                    <div class="col-3 ">
                        <label class="col-form-label ms-5">ชื่อสถานที่</label>
                    </div>
                    <div class="col-4">
                        <label class="col-form-label "><%= data[0].placeName %></label>
                    </div>
                </div>
                <!--  -->
                <div class="row my-2   row-cols-2">
                    <div class="col-3 ">
                        <label class="col-form-label ms-5">กีฬา</label>
                    </div>
                    <div class="col-4">
                        <label class="col-form-label ">  <%= data[0].nameType %></label>
                      
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2 mt-3">
                    <div class="col-3 ">
                        <label class="col-form-label ms-5">URL Google Map</label>
                    </div>
                    <div class="col">
                        
                        <iframe width="600" height="450" frameborder="0" style="border:0"
                        src="https://www.google.com/maps/embed/v1/place?q=<%= URL %>&key=AIzaSyD0L1mq9oNzqPEepFbHk0iARm-yzX0ok8A" allowfullscreen>
                        </iframe>
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2 mt-4">
                    <div class="col-3 ">
                        <label class="col-form-label ms-5">รูปภาพ</label>
                    </div>
                    <div class="col-4 ">
                        <image src="/place/<%= data[0].placeFile %>" id="imgpreview" class="form-control" name="placeFile"
                            autocomplete="off" >
                    </div>
                </div>
                <!--  -->
                <div class="row my-2  p row-cols-2 mt-3">
                    <div class="col-3 h-auto" style="max-height: 300px; min-height: 100px;">
                        <label class="col-form-label ms-5">รายละเอียดสถานที่</label>
                    </div>
                    <div class="col-4">
                        <label class="col-form-label"><%= data[0].placeDetail %></label>
                    </div>
                </div>
               <!--  -->
               <div class="row row-cols-2 mt-5 text-center d-flex justify-content-center">
                <div class="col-3">
                    <a href="javascript:history.back()" class="btn btn-danger">ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        function preview() {
            imgpreview.src = URL.createObjectURL(event.target.files[0]);
            imgpreview.style.display = "block";

        }
    </script>


        </body>

        </html>
    </div>