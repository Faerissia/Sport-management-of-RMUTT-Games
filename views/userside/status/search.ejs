<%- include("../../partials/header") %>
<%- include("../../partials/banner") %>
        <div class="container-sm py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>สิ้นสุดการแข่งขันแล้ว</title>
</head>
<body>
    
    <%- include("../../partials/menuindex") %>

    <div class="card rounded-2 mt-5  mx-5">
        <div class="card-header p-2 d-flex  justify-content-center  text-center position-relative"
            style=" height: 5rem; background-color: #6DAFFE;">
            <h4 class="  text-body fw-bolder position-absolute top-50 start-50 translate-middle text-wrap"
                style="font-size: .8 em;">
                ค้นหาการแข่งขัน</h4>
        </div>
        <div class="d-flex flex-row rounded-bottom-2  justify-content-center bg-secondary bg-opacity-25 pb-2">





            <div class="row row-cols-1">
                <div class="col">
                <div class="col">
            
                <div class="float-end mt-5">
                <form action="/search-result" method="post">
                    <div class="input-group">
                    <div class="col me-2">
                        <select name="sport" class="form-control border border-dark">
                            <option value="">เลือกประเภทกีฬา</option>
                                <% for(a=0;a<data.length;a++){ %>
                                    <option value="<%= data[a].sportID %>"><%= data[a].sportName %></option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="col me-2">
                            <select name="status" class="form-control border border-dark">
                                <option value="">สถานะการแข่งขัน</option>
                                        <option value="opening">เปิดรับสมัคร</option>
                                        <option value="ongoing">อยู่ระหว่างการแข่งขัน</option>
                                        <option value="ending">สิ้นสุดการแข่งขันแล้ว</option>
                                </select>
                            </div>
                            <div class="col me-1">
                        <input type="text" name="search" class="form-control border border-dark" placeholder="ค้นหา ชื่อการแข่งขัน">
                    </div>
                    <div class="col-auto me-3">
                        <button type="submit" class="btn btn-primary ">ค้นหา</button>
                    </div>
                    </div>
                </form>
            </div>
            </div>
            </div>






            
                <div class="col-12 w-100 text-center mx-auto">
                    <div class="row w-100  text-center mx-auto">
                <% if(data.length) { %>
                    <% for(let i=0; i < data.length; i++) { %>
                            <div class="col-4 ">
                            <div class="card mx-auto my-4 rounded-4 bg-light " style="width: 17rem">
                                <a href="/tnmdetail/<%= data[i].tnmID %>"
                                    class="text-decoration-none text-dark  fw-bolder">
                                    <div class="card-header bg-transparent text-truncate " >
                                        <%= data[i].tnmName %>
                                    </div>

                                    <img src="images/<%= data[i].tnmPicture %>"
                                        class="card-img-top img-fluid rounded-0" style="height: 16rem">
                                    <div class="card-body">
                                         <label style="font-size: 14px;">เปิดรับสมัคร 
                                         <%= data[i].Rstartdate.toLocaleDateString('th-TH',{day: '2-digit', month: 'short' , year:'2-digit'}) %> -
                                        <%= data[i].Renddate.toLocaleDateString('th-TH',{day: '2-digit', month: 'short' , year:'2-digit'}) %> </label>
                                        <% if(data[i].sportPlaynum > 1 ){ %>
                                            <% data[i].nop = data[i].nop / data[i].sportPlaynum %>
                                            <% } %>
                                        <label>จำนวนผู้เข้าร่วม <%= data[i].nop %></label>
                                    </div>
                                </a>
                            </div>
                        </div>
                            <% } %>
                            <% } %>

                            
                    </div>

                                        <% if(!data.length) { %>
                                            <h4 class="text-center text-wrap" style="margin-top: 50px; margin-bottom: 50px;">ไม่พบรายการแข่งขัน</h4>
                                            <% } %>
                                            
                </div>
            </div>

        </div>
    </div>


</body>
</html>
</div>


