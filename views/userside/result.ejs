                  <tr>
                    <!-- <th scope="col">อันดับ</th> -->
                    <td class="align-middle" colspan="2" scope="col">
                      <div class="box  w-auto text-start ms-5">
                        <div class=" btn  btn-primary"  style="width: 80%; ">
                          <div class="text-center text-light">
                            รวม
                          </div>
                        </div>
                      </div>
                    </td>
                    
                    <td class="align-middle" scope="col"><%= sumst1 %></td>
                    <td class="align-middle" scope="col"><%= sumnd2 %></td>
                    <td class="align-middle" scope="col"><%= sumrd3 %></td>
                    <td class="align-middle" scope="col"></td>
                  </tr>
  
                </tfoot>
              </table>
