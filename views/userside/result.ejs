<%- include("../partials/header") %>
<%- include("../partials/banner") %>
        <div class="container-sm py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>สรุปรางวัล</title>
    <style>
        th, td {
      border: 1px solid rgb(227, 227, 227);
      padding: 8px;
      text-align: center;
    }
    
     th:nth-child(3) {
      background-color: rgb(252, 255, 104);
    
    }
    
    td:nth-child(3) {
      background-color: rgb(252, 252, 92);
    } 
    th:nth-child(4) {
      background-color: rgb(226, 226, 226);
    
    }
    
    td:nth-child(4) {
      background-color: rgb(218, 218, 218);
    } 
    th:nth-child(5) {
      background-color: rgb(255, 173, 49);
    
    }
    
    td:nth-child(5) {
      background-color: rgb(255, 188, 88);
    } 
    </style>
</head>
<body>

    <%- include("../partials/menuindex") %>

    <% if(data.length) { %>
        <table class="table border border-dark">
            <thead>
                <tr>
                    <th scope="col">อันดับ</th>
                    <th scope="col">มหาวิทยาลัย</th>
                    <th scope="col">ที่ 1</th>
                    <th scope="col">ที่ 2</th>
                    <th scope="col">ที่ 3</th>
                    <th scope="col">รวมทั้งหมด</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i+1 %></th>
                        <td><a href="/result/<%=data[i].uniID %>"><%= data[i].name %></a></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    <% } %>

    <% if(!data.length) { %>
        <p class="text-center">ไม่พบรายการสถานที่</p>
    <% } %>


</body>
</html>
</div>


