<%- include("../../partials/header") %>
       <div class="col py-3 mx-auto container-xxl ">
        <!DOCTYPE html>
        <html lang="en">

        <head>
            <title>แบบฟอร์มสมัครเข้าร่วมการแข่งขัน </title>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        </head>

        <body>
            <div class="container text-center">

                <h1 style="margin-top: 20;">แบบฟอร์มแก้ไขข้อมูล <%=data[0].tnmName%>
                </h1>
                <hr style="height:2px;border-width:0;color:gray;background-color:gray">
                <form action="/editemailsingle/<%= data[0].playerID %>" method="post" encType="multipart/form-data" class="needs-validation ">
                    <div class="form-group">

                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationFname" class="col-form-label">ชื่อ</label>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control border-dark" id="validationFname" value="<%= data[0].playerFName %>"
                                    name="playerFName" autocomplete="off" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationLname" class="col-form-label">นามสกุล</label>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control border-dark" id="validationLname" value="<%= data[0].playerLName %>"
                                    name="playerLName" autocomplete="off" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validation" class="col-form-label">เพศ</label>
                            </div>
                            <div class="col-auto">
                                <select class="form-select border-dark" id="validation" name="playerGender" required>
                                    <option selected disabled value="">เพศ</option>
                                    <option value="ชาย" <%= data[0].playerGender === 'ชาย' ? 'selected' : '' %>>ชาย</option>
                                    <option value="หญิง" <%= data[0].playerGender === 'หญิง' ? 'selected' : '' %>>หญิง</option>
                                </select>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                       <% const date = new Date(data[0].playerBirthday) %>
                       <% const isoDate = date.toISOString().split('T')[0]; %>
                       
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationplayerBirthday" class="col-form-label">วัน/เดือน/เกิด</label>
                            </div>
                            <div class="col-auto">
                                <input type="date" class="form-control border-dark" id="validationplayerBirthday"
                                    value="<%= isoDate %>" name="playerBirthday" autocomplete="off" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationTel" class="col-form-label">เบอร์โทรติดต่อ</label>
                            </div>
                            <div class="col-2">
                                <input type="text" class="form-control border-dark" id="validationTel" value="<%= data[0].playerPhone %>"
                                    name="playerPhone" autocomplete="off" pattern="[0-9]{10}" minlength="10"
                                    maxlength="10" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationEmail" class="col-form-label">อีเมล</label>
                            </div>
                            <div class="col-3">
                                <input type="email" class="form-control border-dark" id="validationEmail" value="<%= data[0].playerEmail %>"
                                    name="playerEmail" autocomplete="off" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationUni" class="col-form-label">มหาวิทยาลัย</label>
                            </div>
                            <div class="col-4">
                                     <input type="text" class="form-control border-dark" value="<%= data[0].uniName %>" disabled>

                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validation" class="col-form-label">คณะ</label>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control border-dark" value="<%= data[0].facName %>"  disabled>
                                
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationCard" class="col-form-label">เลขประจำตัวประชาชน</label>
                            </div>
                            <div class="col-2" text-start>
                                <input type="text" class="form-control border-dark" id="validationCard" value="<%= data[0].playerIDCard %>"
                                    name="playerIDCard" autocomplete="off" pattern="[0-9]{13}" minlength="13"
                                    maxlength="13" required>
                            </div>
                        </div>
                        <!-- -------------------------------------------------------------- -->
                
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationFile" class="col-form-label">เอกสารยืนยันตัวตน</label>
                            </div>
                            <div class="col-3">
                                <input type="file" class="form-control border-dark" maxlength="4000000"
                                 accept="image/jpg,image/png,application/pdf" id="validationFile" 
                                 value="<%= data[0].playerFile1 %>" name="playerFile1" required>
                            </div>
                        </div>

                        <!-- -------------------------------------------------------------- -->
                
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                                <label for="validationFile" class="col-form-label">(<%= data[0].tnmUrl %>)</label>
                            </div>
                            <div class="col-3">
                                <input type="file" class="form-control border-dark" maxlength="4000000"
                                 accept="image/jpg,image/png,application/pdf" id="validationFile" 
                                 value="" name="playerFile2">
                            </div>
                        </div>

                        <!-- -------------------------------------------------------------- -->
                
                        <div class="row my-2   row-cols-2">
                            <div class="col-2 text-start">
                            </div>
                            <div class="col-3">
                                <input type="file" class="form-control border-dark" maxlength="4000000"
                                 accept="image/jpg,image/png,application/pdf" id="validationFile" 
                                 value="" name="playerFile3">
                            </div>
                        </div>

                        <!-- คืออะไรนิ -->
                        <input type="hidden" class="" name="tnmID" value="<%= data[0].tnmID%>">
                        <input type="hidden" class="" name="playerID" value="<%= data[0].playerID%>">

                    </div>

                    <div class="row row-cols-2 mt-5  text-center d-flex justify-content-center">
                        <div class="col-2">
                            <a href="javascript:history.back()" class="btn btn-primary">ย้อนกลับ</a>
                        </div>
                        <div class="col-2">
                            <input type="submit" class="btn btn-success" value="ตกลง">
                        </div>
                    </div>



                </form>
            </div>
            <script>
                $(document).ready(function () {
                    $("[id^=university_]").change(function () {
                        var uniID = $(this).val();
                        var index = $(this).data('index');
                        $.ajax({
                            url: "http://localhost:3000/fetch_faculty",
                            method: "POST",
                            data: { uniID: uniID },
                            dataType: "json",
                            success: function (data) {
                                var options = '<option selected disabled value="">เลือกคณะ</option>';
                                for (var j = 0; j < data.length; j++) {
                                    options += '<option value="' + data[j].facultyID + '">' + data[j].name + '</option>';
                                }
                                $('[data-index="' + index + '"]#faculty_' + index).html(options);
                            }
                        });
                    });
                });
            </script>

        </body>

        </html>
    </div>