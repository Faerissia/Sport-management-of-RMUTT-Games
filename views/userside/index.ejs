<%- include("../partials/header.ejs") %>
    <%- include("../partials/banner") %>


        <div class="container-xxl py-3 mx-auto">
            <!DOCTYPE html>
            <html lang="en">

            <head>
                <title>Document</title>
            </head>

            <body>
                <div class="container text-center">

                    <% if (messages.error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= messages.error %>
                        </div>
                        <% } %>
                            <% if (messages.success) { %>
                                <div class="alert alert-success" role="alert">
                                    <%= messages.success %>
                                </div>
                                <% } %>
                                   <!---------------------------------------------------------------------------------------------->
                                   <div class="card rounded-2 mt-5  mx-5">
                                    <div class="card-header p-2 d-flex  justify-content-center  text-center position-relative"
                                        style=" height: 5rem; background-color: #6DAFFE;">
                                        <h4 class="  text-body fw-bolder position-absolute top-50 start-50 translate-middle text-wrap"
                                            style="font-size: .8 em;">
                                            รายการที่เปิดรับสมัคร</h4> <!-- name -->
                                        <a class=" text-body btn btn-warning btn-sm  position-absolute top-50 end-0 translate-middle-y me-4 "
                                            role="button" href="/showall" style="font-size: .8 rem;  
                                            ">ดูทั้งหมด</a>
                                    </div>
                                    <div
                                        class="d-flex flex-row rounded-bottom-2  justify-content-center bg-secondary bg-opacity-25 pb-2">
                
                                        <div class="align-items-start justify-content-center d-flex flex-wrap ">
                                            <% if(data.length) { %>
                                                <% for(let i=0; i < 4; i++) { %>
                                                    <% if(data && data[i]){ %>
                                                        <% if(data[i].Renddate > new Date() ) { %>
                                                        <div class="card mx-3 my-4 rounded-4 bg-light" style="width: 15rem">
                                                            <a href="/tnmdetail/<%= data[i].tnmID %>"
                                                                class="text-decoration-none text-dark  fw-bolder">
                                                                <div class="card-header bg-transparent text-truncate " >
                                                                    <%= data[i].tnmName %>
                                                                </div>
                
                                                                <img src="images/<%= data[i].tnmPicture %>"
                                                                    class="card-img-top img-fluid rounded-0" style="height: 15rem">
                                                                <div class="card-body">
                                                                     <%= data[i].tnmStartdate.toLocaleDateString('th-TH',{day: '2-digit'
                                                                                        , month: 'long' , year:'numeric'}) %> -
                                                                                        <%= data[i].tnmEnddate.toLocaleDateString('th-TH',{day: '2-digit'
                                                                                        , month: 'long' , year:'numeric'}) %>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <% } %>
                                                        <% } %>
                                                            <% } %>
                                                                <% } %>
                
                                                                    <% if(!data.length) { %>
                                                                        <h4 class="text-center text-wrap" style="margin-top: 50px; margin-bottom: 50px;">ไม่พบรายการแข่งขัน</h4>
                                                                        <% } %>
                                        </div>
                
                                    </div>
                                </div>
                                <!---------------------------------------------------------------------------------------------->
                                <!---------------------------------------------------------------------------------------------->
            <div class="card rounded-2 mt-5  mx-5 ">
                    <div class="card-header p-2 d-flex  justify-content-center  text-center position-relative"
                        style=" height: 5rem; background-color: #6DAFFE;">
                        <h4 class="  text-body fw-bolder position-absolute top-50 start-50 translate-middle text-wrap"
                            style="font-size: .8 em;">
                            การแข่งขันที่ดำเนินการอยู่</h4> <!-- name -->
                        <a class=" text-body btn btn-warning btn-sm  position-absolute top-50 end-0 translate-middle-y me-4 "
                            role="button" href="/showall" style="font-size: .8 rem;  
                            ">ดูทั้งหมด</a>
                    </div>
                    <div
                        class="d-flex flex-row rounded-bottom-2  justify-content-center bg-secondary bg-opacity-25 pb-2">
                        <div class="card-group align-items-start justify-content-center d-flex flex-wrap ">
                            <% if(data.length) { %>
                                <% for(let i=0; i < 4; i++) { %>
                                    <% if(data && data[i]){ %>
                                        <% if(data[i].tnmStartdate > new Date() && data[i].tnmEnddate < new Date()) { %>
                                        <div class="card mx-3 my-4 rounded-4 bg-light  " style="width: 15rem">
                                            <a href="/tnmdetail/<%= data[i].tnmID %>"
                                                class="text-decoration-none text-dark  fw-bolder">
                                                <div class="card-header bg-transparent text-truncate ">
                                                    <%= data[i].tnmName %>
                                                </div>

                                                <img src="images/<%= data[i].tnmPicture %>"
                                                    class="card-img-top img-fluid rounded-0" style="height: 15rem">
                                                <div class="card-body">
                                                    <%= data[i].tnmStartdate.toLocaleDateString('th-TH',{day: '2-digit'
                                                    , month: 'long' , year:'numeric'}) %> -
                                                    <%= data[i].tnmEnddate.toLocaleDateString('th-TH',{day: '2-digit'
                                                    , month: 'long' , year:'numeric'}) %>
                                                </div>
                                            </a>
                                        </div>
                                        <% } %>
                                        <% } %>
                                            
                                            <% } %>
                                                <% }else{ %>
                                                    <h4 class="text-center text-wrap" style="margin-top: 50px; margin-bottom: 50px;">ไม่พบรายการแข่งขัน</h4>
                                            <% } %>
                        </div>

                    </div>
                </div>
                <!---------------------------------------------------------------------------------------------->
                <!---------------------------------------------------------------------------------------------->
                

                <div class="card rounded-2 mt-5  mx-5">
                    <div class="card-header p-2 d-flex  justify-content-center  text-center position-relative"
                        style=" height: 5rem; background-color: #6DAFFE;">
                        <h4 class="  text-body fw-bolder position-absolute top-50 start-50 translate-middle text-wrap"
                            style="font-size: .8 em;">
                            สิ้นสุดการแข่งขันแล้ว</h4> <!-- name -->
