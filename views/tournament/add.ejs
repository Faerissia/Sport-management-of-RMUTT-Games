<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>
        <div class="col-10 py-3">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>tournament</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <a href="/tournament" class="btn btn-info">ย้อนกลับ</a>
    <br><br>
    <div class="card">
        <div class="card-header">
            เพิ่มการแข่งขัน
        </div>
        <div class="card-body">
            <form action="/tournament/add" method="post" encType="multipart/form-data">
                <div class="form-group">
                    <label>ชื่อการแข่งขัน:</label>
                    <input type="text" class="form-control" name="tnmName" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label style="margin-top: 15px;">กีฬา:</label>
                    <select name="sportID">
                        <% for(let i = 0; i < data.length; i++) { %>
                        <option value="<%= data[i].sportID %>"><%= data[i].sportName %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>วันที่เปิดรับสมัคร:</label>
                    <input type="date" class="form-control" name="Rstartdate" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label>วันที่ปิดรับสมัคร:</label>
                    <input type="date" class="form-control" name="Renddate" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label>วันที่เริ่มแข่ง:</label>
                    <input type="date" class="form-control" name="tnmStartdate" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label>วันที่สิ้นสุด:</label>
                    <input type="date" class="form-control" name="tnmEnddate" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label>เอกสารที่ใช้ในการสมัคร:</label>
                    <input type="text" class="form-control" name="tnmUrl" placeholder="บัตรประชาชน และ บัตรประจำตัวนักศึกษา">
                </div>
                <div class="form-group">
                    <label>รายละเอียด:</label>
                    <textarea input type="text" class="form-control" name="tnmDetail" autocomplete="off"></textarea>
                </div>
                <div class="form-group">
                    <label>รูปภาพ:</label>
                    <input type="file" class="form-control" name="tnmPicture" required>
                </div>
                <div class="form-group">
                    <label>ไฟล์:</label>
                    <input type="file" class="form-control" name="tnmFile1" required>
                </div>
                <div class="form-group" style="margin-top: 10px;">
                    <input type="submit" class="btn btn-info" value="เพิ่ม">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
</div>