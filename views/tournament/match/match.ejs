<%- include("../../partials/header") %>
<%- include("../../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>match</title>
<style>
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.4);
}
.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 30%;
}
.modal-header {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10px;
}
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: rgb(242, 2, 2);
  text-decoration: none;
  cursor: pointer;
}
</style>
</head>
<body>
            
    <h1>หน้าผู้เข้าร่วม <%= tournamentName %></h1>
        <%- include("../../partials/menu_staff.ejs") %>

        <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= messages.error %>
            </div>
            <% } %>

            <script type="text/javascript">
                function confirm_delete() {
                    return confirm('คุณแน่ใจแล้วหรือไม่?\nถ้าบันทึกคะแนนแล้วไม่สามารถแก้ไขคะแนนได้');
                    }
                
                
                function check_input() {
                    var inputs = document.querySelectorAll('[id^="score"]');
                    for (var i = 0; i < inputs.length; i++) {
                        if (inputs[i].value) {
                            if (!confirm_delete()) {
                            return false; // Cancel form submission
                            }
                        break; // Stop looping after displaying confirmation message
                        }
                    }
  return true;
                }
            </script>
            
            
    
    
            <!-- //แบบเดี่ยว -->
            <div class="card-body">

                
                    <table class="table  w-75 mx-auto my-5 border  border-dark table-striped table-hover text-center align-middle">
                        <thead style="background-color: rgb(96, 166, 253); ">
                            <tr>
                                <th scope="col">Match</th>
                                <th scope="col">Date & Time</th>
                                <th scope="col">สถานที่การแข่งขัน</th>
                                <th scope="col">คู่ระหว่าง</th>
                                <th scope="col">คะแนน</th>
                                <th width="200px">ตัวเลือก</th>
                            </tr>
                        </thead>
                        <% if(data && data[0]) { %>
                            <% if(data.length) { %>
                        <tbody>
                            
                            <% for(let i = 0; i < data.length; i++) { %>
                                
                                
                                <tr>
                                    <td><%= i+1 %></td>
                                <% if(data[i].pDate === null || data[i].time === null || data[i].timeend === null){ %>
                                    
                                    <td><%= data[i].pDate %></td>
                                    <% }else{ %>
                                        <td><%= data[i].pDate.toLocaleDateString('th-TH',{day: '2-digit' ,
                                            month: 'long' , year:'numeric'}) %> <%= data[i].time.slice(0, 5); %> - <%= data[i].timeend.slice(0, 5); %></td>
                                        <% } %>
                                    <td><%= data[i].placeName %></td>
                                    <td><%= data[i].player1_name %> vs <%= data[i].player2_name %></td>
                                    <% if(data[i].score1=== null && data[i].score2 === null){ %>
                                        <td>0 - 0</td>
                                        <%}else{ %>
                                    <td><%= data[i].score1%> - <%= data[i].score2%></td>
                                    <% } %>
                                    <td>
                                        <% if(data[i].score1 && data[i].score2){ %>
                                    <button class="modal-trigger btn btn-primary" onclick="document.getElementById('view<%= i %>').style.display='block'">ดู</button>
                                            <% }else{ %>
                                    <button class="modal-trigger btn btn-warning" onclick="document.getElementById('modal<%= i %>').style.display='block'">แก้ไข</button>
                                                <% } %>
                                            <div id="modal<%= i %>" class="modal">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <span class="close" onclick="document.getElementById('modal<%= i %>').style.display='none'">&times;</span>
                                                    </div>
                                                    <form action="/tournament/matchedit/<%= tnmID %>" method="post">
                                                        <% if(data[i].pDate === null){ %>
                                                            วันที่
                                                            <input type="date" name="pDate" value="<%= data[i].pDate %>" required>
                                                            <% }else{ %>
                                                        วันที่
                                                        <input type="date" name="pDate" value="<%= data[i].pDate.toISOString().substring(0, 10); %>" required>
                                                        <% } %>
                                                        สถานที่
                                                        <select name="placeID">
                                                            <% for(let j=0; j < place.length; j++) { %>
                                                                <option value="<%= place[j].placeID %>">
                                                                    <%= place[j].placeName %>
                                                                </option>
                                                                <% } %>
                                                        </select><br>
                                                        ช่วงเวลา
                                                        <input type="time" name="time" value="<%= data[i].time %>" required> ถึง <input type="time"  name="Endtime" value="<%= data[i].timeend %>" required>
                                                        
                                                        <div>ผลการแข่งขัน</div>
                                                        <input type="hidden" name="participant1" value="<%= data[i].p1ID %>">
                                                        <div>
                                                        <%= data[i].player1_name %>
                                                        <input type="text" class="form-control" name="score1" id="score1<%= i%>">
                                                        </div>
                                                        <input type="hidden" name="participant2" value="<%= data[i].p2ID %>">
                                                        <div>
                                                        <%= data[i].player2_name %>
                                                        <input type="text" class="form-control" name="score2" id="score2<%= i%>">
                                                        </div>
                                                        <input type="hidden" name="matchID" value="<%= data[i].matchID %>">
                                                        <input type="hidden" name="round" value="<%= data[i].round %>">
                                                        <input type="hidden" name="seed" value="<%= data[i].seed %>">
                                                        <input type="file" name="scoresheet"><br>
                                                        <button value="sunbmit" class="btn btn-success"  onclick="return check_input()">บันทึก</button>
                                                    </form>
                                                </div>  
                                            </div>


                                            <div id="view<%= i %>" class="modal">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <span class="close" onclick="document.getElementById('view<%= i %>').style.display='none'">&times;</span>
                                                    </div>
                                                    <% if(data[i].pDate){ %>
                                                    วันที่ : <%= data[i].pDate.toLocaleDateString('th-TH',{day: '2-digit' ,
                                                    month: 'long' , year:'numeric'}) %>
                                                    <% } %>
                                                    สถานที่ : <%=data[i].placeName %>
                                                    <% if(data[i].time && data[i].timeend){ %>
                                                    เวลา : <%= data[i].time.slice(0, 5); %> - <%= data[i].timeend.slice(0, 5); %>
                                                    <% } %>
                                                    ผลการแข่งขัน <%= data[i].player1_name %><%= data[i].score1 %> <%= data[i].player2_name %><%= data[i].score2 %>
                                                    ไฟล์ : <%= data[i].matchfile %>
                                                    
                                                </div>  
                                            </div>


                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                        <% } %>
                        <% } %>
                    </table>
                

   
    


             <!-- if result is empty-->
             <% if(!data || !data[0]) { %>
                <h4 class="text-center" style="margin-top: 50px;">ไม่พบรายการ</h4>
            <% } %>
            
        </div>

</body>


</html>


</div>