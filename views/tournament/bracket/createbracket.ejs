<%- include("../../partials/header") %>
<%- include("../../partials/sidebar") %>
        <div class="col-10 py-3 mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
    <style>
        .data{
            display: none;
        }
    </style>
</head>
<body>
    <h1><%= tournamentName %></h1>

        <%- include("../../partials/menu_staff.ejs") %>


    <form action="/tournament/createbracket/<%= tnmID %>" method="post">

        <div class="row my-2   row-cols-2">
            <div class="col-2 ">
                <label for="validationSport" class="col-form-label">type of tournament</label>
            </div>
        <div class="col-auto">
        <select class="form-select border-dark" name="tnmTypegame" id="type">
            <option value="">เลือกประเภท</option>
            <option value="single">Single Elimination</option>
            <option value="roundrobin">Round Robin</option>
            <option value="leaderboard">LeaderBoard</option>
            <option value="roundsingle">Round Robin and Single Elimination</option>
        </select>
        </div>
    </div>

    <div>
        <div id="single" class="data">single</div>
        <div id="roundrobin" class="data">round</div>
        <div id="leaderboard" class="data">leaderboard</div>
        <div id="roundsingle" class="data">roundsingle</div>
    </div>
    

    <div class="col-auto">
        <button class="btn btn-success" type="submit">ยืนยัน</button>
    </div>
    </form>

  

</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#type").on('change', function(){
            $(".data").hide();
            $("#" + $(this).val()).fadeIn(100);
        }).change();
    });

</script>
</html>
</div>